{
  "name": "sitespect-qa",
  "version": "1.2.2",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^1.0.0",
    "@material-ui/icons": "^1.0.0",
    "react": "^16.3.1",
    "react-dom": "^16.3.1",
    "react-scripts": "1.1.4",
    "react-tap-event-plugin": "^3.0.2",
    "scroll-into-view": "^1.9.3",
    "styled-components": "^3.2.5",
    "zip-folder": "^1.0.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "clean": "node scripts/clean.js",
    "build": "react-scripts build && node scripts/create-extension.js",
    "pack": "npm run clean && node scripts/update-manifest.js && npm run build && rm -rf extension.zip && zip -r extension.zip ./extension/*",
    "test": "react-scripts test --env=jsdom",
    "postversion": "node scripts/update-manifest.js && git commit -am 'update version'",
    "lint": "standard",
    "lint:fix": "standard --fix"
  },
  "standard": {
    "env": {
      "jest": true
    },
    "globals": [
      "jest",
      "afterAll",
      "afterEach",
      "beforeAll",
      "beforeEach",
      "describe",
      "require",
      "test",
      "it",
      "expect",
      "fetch",
      "URL"
    ],
    "ignore": [
      "./*"
    ],
    "cwd": "./src"
  },
  "devDependencies": {
    "eslint": "^4.19.1",
    "eslint-plugin-import": "^2.10.0",
    "eslint-plugin-react": "^7.7.0",
    "fs-extra": "^6.0.1",
    "standard": "^11.0.1"
  }
}
